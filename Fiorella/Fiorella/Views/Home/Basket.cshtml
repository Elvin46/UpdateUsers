@model List<BasketViewModel>
@{
    ViewData["Title"] = "Basket";
    
}

<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product</th>
          <th scope="col">Price</th>
          <th scope="col">Count</th>
          <th scope="col">Total Price</th>

        </tr>
      </thead>
      <tbody>
        @foreach (var product in Model)
       {
           <tr>
          <th scope="row">1</th>
          <td>@product.Name</td>
          <td>@product.Price</td>
          <td><a asp-controller="Home" asp-action="CountDown" asp-route-id="@product.Id">-</a>
              @product.Count
              <a asp-controller="Home" asp-action="CountUp" asp-route-id="@product.Id">+</a>
              </td>
          <td>@product.TotalPrice</td>
          <td><a class="btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@product.Id">DELETE</a></td>
        </tr>
       }
      </tbody>
    </table>
    <div class="row justify-content-center">
        <h4>Total Amount: $@ViewBag.TotalAmount</h4>
    </div>
</div>

