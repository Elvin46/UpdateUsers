@model List<Blog>;
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic Table</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Title</th>
                          <th>Date</th>
                        </tr>
                      </thead>
                      <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                  <td>@item.Id</td>
                                  <td>@item.Title</td>
                                  <td>@item.Date</td>
                                  <td>
                                      <a class="btn btn-warning">Update</a>
                                      <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                      <a class="btn btn-danger" asp-action="Delete">Delete</a>
                                  </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
</div>

