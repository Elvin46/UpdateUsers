@model Blog;
@{
    ViewData["Title"] = "Create";
}

<div class="row">
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
            Basic form layout
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input  class="form-control"  placeholder="Title" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle">Subtitle</label>
                    <input class="form-control"  placeholder="Subtitle" asp-for="Subtitle">
                    <span asp-validation-for="Subtitle" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input class="form-control"  placeholder="Image" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input class="form-control" placeholder="Date" asp-for="Date">
                    <span asp-validation-for="Date" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
</div>

